<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
	    android:layout_width="wrap_content"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical" >
	    <ImageView
            android:id="@+id/imgBattery"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/stat_sys_battery_100"
            android:contentDescription="@string/connectivity_description" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
	    android:layout_width="wrap_content"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical" >

	    <Button
	        android:id="@+id/btnEngine"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:text="@string/placeholder_engine"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
	    android:layout_width="wrap_content"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgConnectivity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/connectivity_bad"
            android:contentDescription="@string/connectivity_description" />
	    
    </LinearLayout>

</LinearLayout>
